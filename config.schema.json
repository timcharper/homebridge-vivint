{
    "pluginAlias": "Vivint",
    "pluginType": "platform",
    "singular": true,
    "schema": {
      "type": "object",
      "properties": {
        "username": {
            "type": "string",
            "title": "Vivint username",
            "format": "email",
            "default": "",
            "required": true
        },
        "password": {
            "type": "string",
            "title": "Vivint password",
            "default": "",
            "required": true
        },
        "apiLoginRefreshSecs": {
            "type": "integer",
            "title": "API Refresh",
            "description": "How often should Vivint Homebridge renew the session token.",
            "default": 1200
        },
        "ignoreDeviceTypes": {
            "title": "Ignored Device Types",
            "type": "array",
            "uniqueItems": true,
            "items": {
              "title": "Device Type",
              "type": "string",
              "enum": [
                "primary_touch_link_device",
                "thermostat_device",
                "door_lock_device",
                "garage_door_device",
                "camera_device",
                "wireless_sensor"
              ]
            }
        },
        "showCameraConfig": {
          "title": "Show camera config",
          "description": "Shows [homebridge-camera-ffmpeg](https://github.com/Sunoo/homebridge-camera-ffmpeg) configuration for all detected cameras in the log",
          "type": "boolean"
        },
        "cameraAutomationHttpPort": {
          "type": "integer",
          "title": "Camera Automation HTTP port",
          "description": "HTTP port used for [homebridge-camera-ffmpeg](https://github.com/Sunoo/homebridge-camera-ffmpeg) automations. [Read more](https://sunoo.github.io/homebridge-camera-ffmpeg/automation/http.html)"
        }
      }
    },
    "form": null,
    "display": null
  }